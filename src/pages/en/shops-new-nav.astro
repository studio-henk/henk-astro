---
// import BaseLayout from "../../layouts/BaseLayout.astro";
import { getLangFromUrl } from "../../i18n/utils";
import NewNavLayout from "../../layouts/NewNavLayout.astro";
const lang = getLangFromUrl(Astro.url);
---

<NewNavLayout title="Shops">
    {/* intro block */}
    <div class="sh-molecule-bg-box" data-section="content" style="--color-background-component-bgbox:var(--color-white);">
        <div class="sh-molecule-padding-box" style="
                --size-spacing-units-top: 24;
                --size-spacing-units-right: 11;
                --size-spacing-units-bottom: 26;
                --size-spacing-units-left: 5;
                --size-spacing-units-top-desktop: 24;
                --size-spacing-units-right-desktop: 5;
                --size-spacing-units-bottom-desktop: 24;
                --size-spacing-units-left-desktop: 5;
            ">
            <div class="page-header">
                <p class="page-header__page-title">Our Stores</p>
                <p class="page-header__page-description">Browse our furniture, get inspired for your home, and dive into
                    our journey.</p>
            </div>
        </div>
    </div>

    {/* store grid */}

    <div data-section="invert" class="sh-molecule-bg-box" style="--color-background-component-bgbox:var(--color-white);">
        <div class="sh-molecule-padding-box sh-stores" style="
                        --size-spacing-units-top: 0;
                        --size-spacing-units-right: 5;
                        --size-spacing-units-bottom: 15;
                        --size-spacing-units-left: 5;
                        --size-spacing-units-top-desktop: 0;
                        --size-spacing-units-right-desktop: 5;
                        --size-spacing-units-bottom-desktop: 17;
                        --size-spacing-units-left-desktop: 5;
                    ">
            <div class="sh-l-grid sh-l-grid--4">
                <div class="sh-l-grid__item sh-store" style="
                             animation-delay: 0.15s;
                             ">
                    <a href="/en/stores/amsterdam-flagship-store">
                        <img class="sh-store__image"
                             src="https://assets.studio-henk.nl/assets/Images/new-stores/studio-henk-store-amsterdam-3.jpeg"
                             alt="Photo of HENK AMSTERDAM FLAGSHIP STORE">
                    </a>

                    <p class="sh-store__title">
                        <a href="/en/stores/amsterdam-flagship-store" style="text-decoration: none;">
                            AMSTERDAM FLAGSHIP STORE
                        </a>
                    </p>
                    <p class="store-intro">With a surface area of almost 1,000m2, spread across three floors, The Home of Studio HENK is our
                        largest and most family-friendly store.</p>
                    <address>Rozengracht 204<br>1016 NL Amsterdam<br>The Netherlands</address>
                    <p class="store__opening-times">Monday: Closed<br>Tuesday till Saturday: 10.00 - 18.00<br>Sunday: 12.00 - 18.00</p>
                    <p class="store__holidays">Liberation Day (May 5th) - 10:00 - 18:00<br>Ascension Day (May 18th) - 10.00 - 18.00</p>
                    <a class="sh-store__link"
                       href="https://www.google.com/maps/place/Studio+HENK+Amsterdam+Flagship+store/@52.3726924,4.8772189,17z/data=!4m13!1m7!3m6!1s0x47c609dc0a96f429:0x58e08ef0a2d297a0!2sRozengracht+204,+1016+NL+Amsterdam!3b1!8m2!3d52.3726924!4d4.8772189!3m4!1s0x47c6096bedafecb5:0xcf2b8610a886605e!8m2!3d52.3726924!4d4.8772189">
                        Get Directions
                    </a>
                    <div class="sh-buttons">
                        <a class="sh-atom-button" href="/en/stores/amsterdam-flagship-store" style="
                                        --color-background-button: var(--color-accent5);
                                        --color-text-button: var(--color-henk-black);
                                        --color-border-button: var(--color-background-button);
                                    ">discover rozengracht</a>
                    </div>
                </div>
                <div class="sh-l-grid__item sh-store" style="
                             animation-delay: 0.3s;
                             ">
                    <a href="/en/stores/antwerp-flagship-store">
                        <img class="sh-store__image"
                             src="https://assets.studio-henk.nl/assets/Images/new-stores/studio-henk-store-antwerpen.jpg"
                             alt="Photo of HENK ANTWERP FLAGSHIP STORE">
                    </a>
                    <p class="sh-store__title">
                        <a href="/en/stores/antwerp-flagship-store" style="text-decoration: none;">ANTWERP FLAGSHIP STORE</a>
                    </p>
                    <p class="store-intro">Enter the impressive, classical entrance and discover 450m2 of interior design and furniture inspiration.</p>
                    <address>Kloosterstraat 52-Rechts,<br>2000 Antwerp<br>Belgium</address>
                    <p class="store__opening-times">Monday: Closed<br>Tuesday &amp; Wednesday: 11.00 - 18.00<br>Thursday till Sunday: 10.00 - 18.00</p>
                    <p class="store__holidays">Labour Day (May 1st) - 12.00 - 18.00
                        {/*<br>Ascension Day (May 18th) - 10.00 - 18.00*/}
                    </p>
                    <a class="sh-store__link"
                       href="https://www.google.com/maps/place/Studio+HENK+Flagshipstore+Antwerpen/@51.2159162,4.3948317,15z/data=!4m2!3m1!1s0x0:0x9a8f18e166405e3?sa=X&amp;amp;ved=2ahUKEwiGosyO-Nb0AhX7iP0HHWV5A1oQ_BJ6BAgwEAU">
                        Get Directions
                    </a>
                    <div class="sh-buttons">
                        <a class="sh-atom-button" href="/en/stores/antwerp-flagship-store" style="
                                        --color-background-button: var(--color-accent5);
                                        --color-text-button: var(--color-henk-black);
                                        --color-border-button: var(--color-background-button);
                                    ">discover antwerp</a>
                    </div>
                </div>
                <div class="sh-l-grid__item sh-store" style="
                             animation-delay: 0.45s;
                             ">
                    <a href="/en/stores/amsterdam-brand-store">
                        <img class="sh-store__image"
                             src="https://assets.studio-henk.nl/assets/Images/new-stores/studio-henk-store-cruqius-2.jpg"
                             alt="Photo of HENK AMSTERDAM BRAND STORE">
                    </a>
                    <p class="sh-store__title">
                        <a href="/en/stores/amsterdam-brand-store" style="text-decoration: none;">AMSTERDAM BRAND STORE</a>
                    </p>
                    <p class="store-intro">The very first Studio HENK store counts 300m2 of design inspiration spread across two spacious floors.</p>
                    <address>Cruquiusweg 94C<br>1019AJ Amsterdam<br>The Netherlands</address>
                    <p class="store__opening-times">Monday: Closed<br>Tuesday till Sunday: 10.00 - 17.00</p>
                    <p class="store__holidays">Liberation Day (May 5th) - 10:00 - 17:00<br>Ascension Day (May 18th) - 10.00 - 17.00</p>
                    <a class="sh-store__link"
                       href="https://www.google.com/maps/place/Studio+HENK+Amsterdam+Brandstore/@52.3682812,4.9504176,15z/data=!4m5!3m4!1s0x0:0x787752560577920!8m2!3d52.3682812!4d4.9504176">
                        Get Directions
                    </a>
                    <div class="sh-buttons">
                        <a class="sh-atom-button" href="/en/stores/amsterdam-brand-store" style="
                                        --color-background-button: var(--color-accent5);
                                        --color-text-button: var(--color-henk-black);
                                        --color-border-button: var(--color-background-button);
                                    ">discover cruquiusweg</a>
                    </div>
                </div>
                <div class="sh-l-grid__item sh-store" style="
                             animation-delay: 0.6s;
                             ">
                    <a href="/en/stores/utrecht-brand-store">
                        <img class="sh-store__image"
                             src="https://assets.studio-henk.nl/assets/Images/new-stores/studio-henk-store-utrecht.jpg"
                             alt="Photo of HENK UTRECHT BRAND STORE">
                    </a>
                    <p class="sh-store__title">
                        <a href="/en/stores/utrecht-brand-store" style="text-decoration: none;">UTRECHT BRAND STORE</a>
                    </p>
                    <p class="store-intro">Our newest store presents the best of our collection in a 350m2 historic building that we restored to its former glory.</p>
                    <address>Janskerkhof 5<br>3512BK Utrecht<br>The Netherlands</address>
                    <p class="store__opening-times">Monday: Closed<br>Tuesday till Sunday: 10.00 - 18.00</p>
                    <p class="store__holidays">Liberation Day (May 5th) - 10:00 - 18:00<br>Ascension Day (May 18th) - 10.00 - 18.00</p>
                    <a class="sh-store__link"
                       href="https://www.google.com/maps/place/Janskerkhof+5,+3512+BK+Utrecht/@52.0928178,5.1192052,17z/data=!4m5!3m4!1s0x47c66f450d82bd11:0x2f931787ca38f37e!8m2!3d52.0928145!4d5.1213939">
                        GET DIRECTIONS
                    </a>
                    <div class="sh-buttons">
                        <a class="sh-atom-button" href="/en/stores/utrecht-brand-store" style="
                                        --color-background-button: var(--color-accent5);
                                        --color-text-button: var(--color-henk-black);
                                        --color-border-button: var(--color-background-button);
                                    ">discover utrecht</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</NewNavLayout>
<style>
    @media only screen and (max-width: 767px) {
        .sh-store address {
            margin-top: 28px;
        }
    }
    @media only screen and (min-width: 768px) {
        .sh-l-grid--4 {
            align-items: stretch;
        }

        .sh-l-grid__item.sh-store * {
            margin: 0;
        }

        .sh-l-grid__item.sh-store {
            display: grid;
            align-items: flex-start;
            /*grid-template-rows: max-content min-content 112px min-content 1fr auto auto 1fr;*/
            grid-template-rows: max-content min-content 112px min-content 1fr 1fr auto 74px;
            gap: 1rem;
        }

        .store-intro {
        }

        .store__opening-times {
        }
    }

    @media only screen and (min-width: 1368px) {
        .sh-l-grid__item.sh-store {
            grid-template-rows: max-content min-content 112px min-content 1fr 1fr min-content 74px;
        }
    }
</style>