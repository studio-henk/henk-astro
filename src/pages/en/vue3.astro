---
import BaseLayout from "../../layouts/BaseLayout.astro";
---
<BaseLayout title="vue3 test">
    <!-- <script is:inline slot="head-scripts" src="https://unpkg.com/vue@3/dist/vue.global.js"></script> -->
    <!--<script slot="head-scripts" src="/static/std/assets/toolkit/scripts/intlTelInput/js/intlTelInput.min.js"></script>-->
    <div id="app" v-cloak>
        <p>A vue rendered h1 title.</p>
        <h1>[[ message ]]</h1>
        <button id="test-button" type="button">click me!</button>
    </div>
    <script type="module" slot="footer-scripts">
        import { createApp } from 'https://unpkg.com/vue@3/dist/vue.esm-browser.js'

        createApp({
            delimiters: ["[[", "]]"],
            data() {
                return {
                    message: "Hello Vue!"
                };
            }
        }).mount("#app");
    </script>
    <script slot="footer-scripts" defer>
        const testBtn = document.getElementById('test-button');
        console.log(testBtn);
        testBtn.addEventListener("click", (event) => {
            console.log("added eventListener on button");
            alert("oi");
        });
    </script>
</BaseLayout>