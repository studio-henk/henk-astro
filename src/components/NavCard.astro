---
const {
  caption = "Here should be a caption text",
  hasLink = false,
  linkTitle,
  imgUrl,
  imgWidth,
  imgHeight,
  altText,
  borderRadius,
  delay,
  foregroundColor = "currentcolor",
  backgroundColor = "transparent",
} = Astro.props;
---

<div class="nav-card" style={`animation-delay: ${delay};`}>
  <a
    href={hasLink}
    class="nav-card__link hover-interaction-c-2"
    title={linkTitle}
  >
    <div class="nav-card__image-mask">
      <img
        src={imgUrl}
        class="nav-card__image"
        alt={altText}
        width={imgWidth}
        height={imgHeight}
        decoding="async"
        loading="eager"
      />
    </div>
    <p class="nav-card__caption hover-interaction-c-2-target">{caption}</p>
  </a>
</div>
<style is:global>
  .category__gallery .nav-card {
    opacity: 0;
  }

  .--submenu-open .nav-card {
    /*opacity: 1;*/
    animation-name: fadeIn;
    animation-direction: normal;
    animation-duration: 1s;
    animation-fill-mode: forwards;
    animation-iteration-count: 1;
    animation-timing-function: ease;
  }

  .nav-card__image-mask {
    background-color: var(--color-accent6);
  }
</style>