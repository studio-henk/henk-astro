---
const { src, controls = "false", autoplay = "true", muted = "true", loop = "true" } = Astro.props;

const videoProperties = {
    ...(muted === "true" && { "muted": "" }),
    ...(autoplay === "true" && { "autoplay": "" }),
    ...(loop === "true" && { "loop": "" }),
    ...(controls === "true" && { "controls": "" })
}
---
<video
    { ...videoProperties }
    class="mdl-shop-product__video"
>
    <source src={src} type="video/mp4" />
</video>