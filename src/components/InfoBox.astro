---
import Icon from "./Icon.astro";
const { title = "Heading here", icon, content = "<p>Lorem ipsum, content here.</p>" } = Astro.props;
---
<div
    class="info-box"
>
    <div class="component-layout-box">
        <header class="info-box__header">
            <p class="info-box__heading">{title}</p>
            {
                icon &&
                <Icon
                    icon={icon}
                    class="sh-atom-icon__svg"
                />
            }
        </header>
        <div class="info-box__body" set:html={content}>

        </div>
    </div>
</div>
<style is:global>
    .info-box {
        --color-background-component-bgbox: var(--color-accent1);
        --color-text-component-bgbox: var(--color-henk-black);
        border-radius: 0.70588235rem;
        background-color: var(--color-background-component-bgbox, #f3f1ec);
        color: var(--color-text-component-bgbox, #000);
        padding: 1.5em;
    }

    .info-box * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .info-box .component-layout-box {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
    }

    .info-box__header {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        justify-content: space-between;
    }

    .info-box__heading {
        font-weight: 400;
        margin-top: 0;
    }

    .sh-atom-icon__svg {
        width: 28px;
        height: 28px;
    }

    .info-box__footer {
        display: flex;
        justify-content: flex-end;
    }
</style>