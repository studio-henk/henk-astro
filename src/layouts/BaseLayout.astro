<!--       href="/styles/toolkit.css" -->
<!--       media="screen" -->
<!--       rel="stylesheet" -->
<!--       type="text/css" -->
<!--     /> -->
  </head>
  <body>
    <div class="wrapper">
      <TheNav />
      <main>
        <slot />
      </main>
      <TheFooter />
    </div>
  </body>
</html>
