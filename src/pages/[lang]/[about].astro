---
export function getStaticPaths () {
    return [
        {params: {lang: 'en', about: 'about'}},
        {params: {lang: 'nl', about: 'over'}},
    ];
}

const { lang, about} = Astro.params;

let langIndex;
let otherLang;
if (lang == 'en') {
    langIndex = 0;
    otherLang = 1;
} else {
    langIndex = 1;
    otherLang = 0;
}
const languages = getStaticPaths();
