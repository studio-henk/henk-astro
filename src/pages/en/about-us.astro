            class="content-block__container"
            style="
      --size-spacing-units-top:10;
      --size-spacing-units-right:0;
      --size-spacing-units-bottom:4;
      --size-spacing-units-left:0;
      --size-spacing-units-top-desktop:14;
      --size-spacing-units-right-desktop:0;
      --size-spacing-units-bottom-desktop:24;
      --size-spacing-units-left-desktop:0;
"
