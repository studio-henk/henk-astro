<div id="MobileNavButton" class="MobileNavButton">
    <span></span>
    <span></span>
    <span></span>
    <!--<span></span>-->
</div>
<style>

    #MobileNavButton {
        width: 18px;
        height: 18px;
        position: relative;
        margin: 0;
        transform: rotate(0deg);
        transition: .5s ease-in-out;
        cursor: pointer;
    }

    #MobileNavButton:not(.open) {
        top: 4px;
    }

    #MobileNavButton span {
        pointer-events: none;
        display: block;
        position: absolute;
        height: 1px;
        width: 100%;
        background-color: var(--color-background-button-nav-mobile, #000);
        border-radius: 4px;
        opacity: 1;
        left: 0;
        transform: rotate(0deg);
        transition: .25s ease-in-out;
    }

    #MobileNavButton span:nth-child(1) {
        top: 0;
    }

    #MobileNavButton span:nth-child(2),#MobileNavButton span:nth-child(3) {
        top: 8px;
    }

    #MobileNavButton span:nth-child(4) {
        top: 16px;
    }

    #MobileNavButton.open span:nth-child(1) {
        top: 18px;
        width: 0;
        left: 50%;
    }

    #MobileNavButton.open span:nth-child(2) {
        transform: rotate(45deg);
    }

    #MobileNavButton.open span:nth-child(3) {
        transform: rotate(-45deg);
    }

    #MobileNavButton.open span:nth-child(4) {
        top: 18px;
        width: 0;
        left: 50%;
    }

</style>
<script is:inline>
        // Alternative to DOMContentLoaded event
        document.onreadystatechange = function() {
            if (document.readyState === "interactive") {
                MobileNavHandler();
            }
        };
        function MobileNavHandler () {
            const MNButton = document.getElementById("MobileNavButton");
            MNButton.addEventListener('click', function(event) {
                console.log(event);
                event.target.classList.toggle('open');
            });
        }
</script>