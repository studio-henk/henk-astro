---
import {getLangFromUrl} from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
// import MsgBar from "../components/MsgBar.astro";
// import TheNav from "../components/TheNav.astro";
import TheHeader from "../components/TheHeader.astro";
import TheFooter from "../components/TheFooter.astro";

const { title, mainID, mainClass, pageClass, NavFont = "new", NavTheme, NavOnHero } = Astro.props;
---
<html lang={lang} class={pageClass}>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge"/>
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta
        name="description"
        content="Studio HENK is an Amsterdam-based interior design company, founded by two brothers from the Netherlands. We design and produce stunning furniture."
    />
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
    <!-- henk styles -->
     <link rel="stylesheet" href="https://use.typekit.net/kzt0jvy.css" />
    <link
        href="/static/std/assets/toolkit/styles/toolkit.css"
        media="screen"
        rel="stylesheet"
        type="text/css"
    />
    <slot name="head-styles"/>
    <script defer src="/static/std/assets/toolkit/scripts/libs.js"></script>
    <script is:inline defer src="/static/std/assets/toolkit/scripts/toolkit.js"></script>
    <!--<script is:inline defer src="/static/std/assets/toolkit/scripts/toolkit.min.js"></script>-->
    <!--<script is:inline defer src="/static/std/assets/toolkit/scripts/toolkit.bak20230818.js"></script>-->
    <!--<script defer src="/static/std/assets/toolkit/scripts/heightForHeroes.js"></script>-->
    <slot name="head-scripts"/>
</head>
<body>
<div class="wrapper">
    <!--value comes from head <title> tag....usually, which is set in title field on SEO tab in pimcore-->
    <div id="page-title">
        <h1 class="sr-only">{title}</h1>
    </div>
    <!--<MsgBar />-->
    <TheHeader NavFont={NavFont} NavTheme={NavTheme} NavOnHero={NavOnHero} />
    <slot name="pre-main" />
    <main id={mainID} class={mainClass}>
        <slot />
    </main>
    <TheFooter />
</div>
<slot name="footer-scripts" />
</body>
</html>