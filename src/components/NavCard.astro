---
import Video from "./Video.astro";
const {
  caption = "Here should be a caption text",
  hasLink = false,
  linkTitle,
  imgUrl,
  videoSrc,
  imgWidth,
  imgHeight,
  altText,
  borderRadius,
  delay,
  foregroundColor = "currentcolor",
  backgroundColor = "transparent",
} = Astro.props;
---

<div class="nav-card" style={`animation-delay: ${delay};`}>
  <a
    href={hasLink}
    class="nav-card__link hover-interaction-c-2"
    title={linkTitle}
  >
    <div class="nav-card__image-mask">
      {
        imgUrl && <img
              src={imgUrl}
              class="nav-card__image"
              alt={altText}
              width={imgWidth}
              height={imgHeight}
              decoding="async"
              loading="eager"
          />
      }
      {
          videoSrc && <Video
              src={videoSrc}
              classNames=""
          />
      }
    </div>
    <p class="nav-card__caption hover-interaction-c-2-target">{caption}</p>
  </a>
</div>
