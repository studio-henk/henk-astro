{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*.ts", "**/*.ts"],
  "compilerOptions": {
    "target": "es2018",
    "outDir": "public/components/custom-elements",
    "rootDir": "src/components/custom-elements",
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    },
    "verbatimModuleSyntax": true
  }
}
