{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*.ts", "**/*.ts"],
  "compilerOptions": {    
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    },
    "verbatimModuleSyntax": true
  }
}
